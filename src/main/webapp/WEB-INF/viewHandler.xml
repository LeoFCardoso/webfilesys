<?xml version="1.0" encoding="ISO-8859-1"?>
<viewHandlerRegistry>

  <!-- shows log files colorized by log message severity -->
  <viewHandler>
    <class>de.webfilesys.viewhandler.LogViewHandler</class>
    <filePatternList>
      <filePattern>*.log</filePattern>
      <filePattern>*log*</filePattern>
    </filePatternList>
    <parameterList>
      <parameter>
        <paramName>colorConfig</paramName>
        <paramValue>' DEBUG '=navy,' INFO '=blue,' WARN '=maroon,' ERROR '=red,' FATAL '=pink</paramValue>
      </parameter>
      <!--
      <parameter>
        <paramName>charEncoding</paramName>
        <paramValue>UTF-8</paramValue>
        <paramValue>ISO-8859-1</paramValue>
      </parameter>
      -->
    </parameterList>
  </viewHandler>

  <!-- shows Java source code syntax-colorized and pretty printed -->
  <viewHandler>
    <class>de.webfilesys.viewhandler.JavaSourceViewHandler</class>
    <filePatternList>
      <filePattern>*.java</filePattern>
    </filePatternList>
  </viewHandler>
  
  <!-- shows the content of a unix tar archive -->
  <viewHandler>
    <class>de.webfilesys.viewhandler.TarViewHandler</class>
    <filePatternList>
      <filePattern>*.tar</filePattern>
    </filePatternList>
  </viewHandler>
  
  <!-- shows elevation and speed profile diagrams for GPX geo track and waypoint files -->
  <viewHandler>
    <class>de.webfilesys.viewhandler.GeoTrackViewHandler</class>
    <filePatternList>
      <filePattern>*.gpx</filePattern>
    </filePatternList>
  </viewHandler>
  
  <!-- PDF File -->
  <viewHandler>
    <class>de.webfilesys.viewhandler.PDFViewHandler</class>
    <filePatternList>
      <filePattern>*.pdf</filePattern>
    </filePatternList>
  </viewHandler>

  <!-- 
    The view handler for compiled Java class files requires the JAD decompiler.
    It works only on Windows.
    See readme.html for more information.
  <viewHandler>
    <class>de.webfilesys.viewhandler.JavaClassViewHandler</class>
    <filePatternList>
      <filePattern>*.class</filePattern>
    </filePatternList>
  </viewHandler>
  -->
</viewHandlerRegistry>
